<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CurlEz.ViewModels"
             x:Class="CurlEz.Views.MainPage">

    <StackLayout Padding="10">
        <Entry Placeholder="Enter text" Text="{Binding InputText}" />
        <Button Text="Navigate" Command="{Binding NavigateCommand}" />
        <Button Text="Go to Test Page" Command="{Binding NavigateToTestPageCommand}" />
    </StackLayout>
</ContentPage>
